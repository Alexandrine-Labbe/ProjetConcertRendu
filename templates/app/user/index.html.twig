{% extends 'base.html.twig' %}

{% block title %}{% trans %}Liste des utilisateurs{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}Liste des utilisateurs{% endtrans %}</h1>

    <table class="table">
        <thead>
        <tr>
            <th>{% trans %}Id{% endtrans %}</th>
            <th>{% trans %}Email{% endtrans %}</th>
            <th>{% trans %}Rôles{% endtrans %}</th>
            <th>{% trans %}Prénom{% endtrans %}</th>
            <th>{% trans %}Nom{% endtrans %}</th>
            <th>{% trans %}Actions{% endtrans %}</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.FirstName }}</td>
                <td>{{ user.LastName }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}"><span class="material-icons">visibility</span></a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}"><span class="material-icons">create</span></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">{% trans %}Aucune donnée trouvé{% endtrans %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
