{% extends 'base.html.twig' %}

{% block title %}Groupe{% endblock %}

{% block body %}


    <div class="row">
        <div class="col-6">
            <h3>Le groupe {{ band.name }}</h3>
        </div>

        <div class="col-6 text-right">
            <a href="{{ path('band_index') }}" class="btn btn-primary text-white my-1">Retour à la liste</a>

            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('band_edit', {'id': band.id}) }}" class="btn btn-primary text-white my-1">Editer</a>
                {{ include('app/band/_delete_form.html.twig') }}
            {% endif %}
        </div>
    </div>

    <img src="{{ asset(band.picturePath) }}" alt="logo groupe" class="img-thumbnail w-25 mx-auto d-block">

    <p>Le groupe est composé de {{ band.members | length }} membres qui sont :</p>

    <div class="row">

        {% for member in band.members %}
            <div class="col-sm-3 mb-3">
                <div class="card">
                    <img src="{{ asset(member.picturePath) }}" class="card-img-top" alt="Photo membre">
                    <div class="card-body">
                        <h5 class="card-title"><a href="{{ path('member_show', {'id': member.id}) }}"> {{ member.name }} {{ member.firstName }}</a></h5>
                        <p class="card-text">Né le {{ member.birthDate |date('d-m-Y') }}</p>
                    </div>
                    <div class="card-footer">
                        {{ member.job }}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="card">
                <div class="card-body">
                    <p class="card-text">Aucun membre pour l'instant.</p>
                </div>
            </div>

        {% endfor %}
    </div>

    <p>Les prochains concerts à venir : </p>

    <div class="row">

        {% for concert in band.shows %}
            {% if date(concert.date) > date() %}
                <div class="col-sm-3 mb-3">
                    <a class="text-black-50" href="{{ path("concert_show", {'id': concert.id}) }}">

                        <div class="card">
                            <img class="card-img-top" src="{{ asset(concert.band.picturePath) }}" alt="Image groupe">
                            <div class="card-body">
                                <h3 class="card-title text-uppercase">{{ concert.tourName }}</h3>
                                <h4 class="card-title">Le {{ concert.date | date('d/m/Y') }}</h4>
                                <p class="card-text">
                                    Le groupe {{ concert.band.name }} en concert le {{ concert.date | date('d/m/Y') }}.
                                    <br>Réservez vos places maintenant, il n'y en a que {{ concert.hall.capacity }} disponibles !
                                </p>
                                <p class="card-text btn btn-secondary btn-block">{{ concert.hall.name }}</p>
                            </div>
                            <div class="card-body text-uppercase text-center">En savoir plus</div>
                        </div>
                    </a>
                </div>
            {% endif %}
        {% else %}
            <div class="card col-12">
                <div class="card-body">
                    <p class="card-text">Aucun concert pour l'instant.</p>
                </div>
            </div>

        {% endfor %}
    </div>

{% endblock %}
