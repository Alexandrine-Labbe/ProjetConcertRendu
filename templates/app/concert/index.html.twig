{% extends 'base.html.twig' %}

{% block title %}{% trans %}Liste concerts{% endtrans %}{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-6">
            <h1>{% trans %}Liste concerts{% endtrans %}</h1>


        </div>

        <div class="col-6 text-right">
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('concert_new') }}" class="btn btn-primary text-white">{% trans %}Créer{% endtrans %}</a>
            {% endif %}

        </div>
    </div>





    <div class="row">


        {% for concert in concerts %}

            <a class="col-md-4 text-black-50 mb-3" href="{{ path("concert_show", {'id': concert.id}) }}">
                <div class="card h-100">
                    <img class="card-img-top" src="{{ asset(concert.band.picturePath) }}" alt="Image groupe">
                    <div class="card-body">
                        <h3 class="card-title text-uppercase">{{ concert.tourName }}</h3>
                        <h4 class="card-title">{% trans %}Le{% endtrans %} {{ concert.date | date('d/m/Y') }}</h4>

                        <p class="card-text btn btn-secondary btn-block">{{ concert.hall.name }}</p>
                    </div>
                    <div class="card-footer text-uppercase text-center">
                        {% trans %}En savoir plus{% endtrans %}
                    </div>
                </div>
            </a>


        {% else %}

            <div class="card col-12">
                <div class="card-body">
                    {% trans %}Pas de concert prévu.{% endtrans %}
                </div>
            </div>

        {% endfor %}
    </div>

{% endblock %}
