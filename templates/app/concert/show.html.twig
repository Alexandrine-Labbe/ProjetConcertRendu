{% extends 'base.html.twig' %}

{% block title %}Concert{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-6">
            <h1>{{ concert.tourName }}</h1>
        </div>

        <div class="col-6 text-right">
            <a href="{{ path('concert_index') }}" class="btn btn-primary text-white">Retour à la liste</a>


            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('concert_edit', {'id': concert.id}) }}" class="btn btn-primary text-white">Editer</a>
                {{ include('app/concert/_delete_form.html.twig') }}
            {% endif %}
        </div>
    </div>



    <div class="row pb-5">
        <div class="col-12 col-md-6">
            <h3>{{ concert.date ? concert.date|date('Y-m-d') : '' }}</h3>
            <p>
                Le groupe <a href="{{ path('band_show', {'id': concert.band.id}) }}" class="text-primary">{{ concert.band.name }}</a> en concert le {{ concert.date | date('d/m/Y') }}.
                <br>Réservez vos places maintenant, il n'y en a que {{ concert.hall.capacity }} disponibles !
            </p>

            <h4>Infos pratiques</h4>

            <p>Salle de concert : {{ concert.hall.name }}</p>
            <p>Hall : {{ concert.hall.concertHall.name }}</p>
            <p>Présentation : {{ concert.hall.concertHall.presentation }}</p>
            <p>Ville : {{ concert.hall.concertHall.city }}</p>
            
        </div>
        <div class="col-12 col-md-6">
            <img class="rounded mx-auto d-block w-100" src="{{ asset(concert.band.picturePath) }}" alt="Image groupe">

        </div>
    </div>

    


{% endblock %}
{% block footer %}
    {{ include("app/includes/footer.html.twig") }}

{% endblock %}

