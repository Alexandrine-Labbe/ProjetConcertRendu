{% extends 'base.html.twig' %}

{% block title %}Membres{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-6">
            <h1>{{ member.name }} {{ member.firstName }}</h1>

        </div>
        <div class="col-6 text-right">
            <a href="{{ path('member_index') }}" class="btn btn-primary text-white">Retour à la liste</a>

            {% if is_granted('ROLE_ADMIN') %}

                <a href="{{ path('member_edit', {'id': member.id}) }}" class="btn btn-primary text-white">Editer</a>

                {{ include('app/member/_delete_form.html.twig') }}

            {% endif %}


        </div>
    </div>



    <div class="row pb-5">
        <div class="col-12 col-md-6">
            <h2>{{ member.band.name }}</h2>
            <h3>{{ member.job }}</h3>
            <p>
                {{ member.name }} {{ member.firstName }}, né le {{ member.birthDate ? member.birthDate|date('d-m-Y') : ' (date inconnue)' }} est un membre du groupe
                <a href="{{ path("band_show", {'id': member.band.id}) }}" class="text-primary">{{ member.band.name }}</a> dans lequel il tient le rôle de {{ member.job }}.
            </p>

        </div>
        <div class="col-12 col-md-6">
            <img class="rounded mx-auto d-block w-100" src="{{ asset(member.picturePath) }}" alt="Image groupe">

        </div>
    </div>


{% endblock %}
