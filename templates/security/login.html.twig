{% extends 'base.html.twig' %}

{% block title %}{% trans %}Connexion{% endtrans %} !{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            {% trans with {'%username%': app.user.username } %}Vous êtes connecté en tant que { username }{% endtrans %}, <a href="{{ path('app_logout') }}">{% trans %}Déconnexion{% endtrans %}</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">{% trans %}Connectez vous{% endtrans %}</h1>
    <label for="inputEmail">{% trans %}Email{% endtrans %}</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>

    <label for="inputPassword">{% trans %}Mot de passe{% endtrans %}</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary text-white d-block mx-auto my-3" type="submit">
        {% trans %}Connexion{% endtrans %}
    </button>
</form>
{% endblock %}
